<%= link_to('New Comic', new_comic_path, class: "btn btn-success") if current_user.try(:is_admin?) %>

<p id="notice"><%= notice %></p>

<% @comics.each do |comic| %>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <h1><%= comic.title %></h1>
    <div><%= render partial: 'admin_links', locals: {comic: comic} %></div>
    <br>
    <div><%= render partial: 'image', locals: {comic: comic} %></div>
    <h4><%= comic.release_date.strftime('%b %d, %Y') %></h4>
    <br>
    <div><%= render partial: 'comments/form', locals: {comic: comic} %></div>
    <br>

      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id='<%="heading-#{comic.id}"%>'>
          <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href='<%="#collapse-#{comic.id}"%>' aria-expanded="true" aria-controls='<%="collapse-#{comic.id}"%>'>
              Comments
            </a>
          </h4>
        </div>
        <div id='<%="collapse-#{comic.id}"%>' class="panel-collapse collapse in" role="tabpanel" aria-labelledby='<%="heading-#{comic.id}"%>'>
          <div class="panel-body">
            <div><%= render comic.comments %></div>
          </div>
        </div>
      </div>

</div>

<% end %>

