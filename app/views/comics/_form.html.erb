<%= form_for(@comic) do |f| %>
  <% if @comic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comic.errors.count, "error") %> prohibited this comic from being saved:</h2>

      <ul>
      <% @comic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_select :release_date %>
  </div>

  <div class="field">
    <%= f.label :horizontal_image %>
    <%= f.file_field :horizontal_image, class: 'center-block btn btn-success'%>
  </div>

  <div class="input-group">
    <%= f.label :vertical_image %>
    <span class="input-group-btn">
        <span class="btn btn-primary btn-file">
            Browse&hellip; <input type="file" name="comic[vertical_image]" id="comic_vertical_image" >
        </span>
    </span>
    <input type="text" class="form-control" readonly>
  </div>

  <br>

  <div class="actions">
    <%= f.submit class:'btn btn-success'%>
  </div>
<% end %>
