<% if current_user %>
  <%= form_for(Comment.new, remote: true, html: { class: '' }) do |f| %>
    <%= f.hidden_field :comic_id, value: comic.id %>
    <%= f.text_field :body, placeholder: "Add a comment...", class: 'form-control' %>
    <%= f.submit "comment", class: 'hidden' %>
  <% end %>
<% else %>
  <%= link_to 'Sign In', "/auth/google_oauth2"%> to Comment  
<% end %>