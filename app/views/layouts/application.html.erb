</head>

<body class='text-center'>

  <div>
    <%= link_to image_tag('https://s3-us-west-2.amazonaws.com/acetheyellowdog/uploads/comic/pic/head.jpeg', 
        class: 'banner-image'), root_path %>
  </div>
  <h1><%= link_to "Adventures of Ace the Yellow Dog", root_path %></h1>

  <nav>
    <div class="container-fluid">  
      <hr>        
      <%= render "shared/navlinks" %>
      <hr>
    </div>
  </nav>

<%= yield %>

  <div class="footer">
    <hr>
    <%= render "shared/navlinks" %>
  </div>

</body>

</html>


